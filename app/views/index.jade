  script(type="text/javascript", charset="utf-8", src="/lib/jquery/jquery.min.js")
  script(type="text/javascript", charset="utf-8", src="/lib/jquery/jquery-ui.js")
  script(type="text/javascript", charset="utf-8", src="/lib/jquery/jquery.ui.touch-punch.js")
  script(type="text/javascript", charset="utf-8", src="/lib/jquery/jquery.autogrow-textarea.js")
  script(type="text/javascript", charset="utf-8", src="/lib/jquery/jquery.jsPlumb-1.4.1-all-fixed.js")
